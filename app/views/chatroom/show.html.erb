<div class="page-header">
  <h1><%= @room.user.username + "'s " %>Chatroom <small>invite your friends for an instant place to chat</small></h1>
  <p> Link: <%= @room.uniqueURL %> </p>
</div>
<table class="table">
    <tbody>
      <% @room.messages.each do |m| %>
        <tr>
          <td><%= m.user.username %></td>
          <td><%= m.text %></td>
        </tr>  
      <% end %>
      
    </tbody>
    <%= form_for :message, url: {action: :send_message }  do |f| %>
      <%= f.text_field :text %>
    <% end %>
</table>
